    <div class="container">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-user-shield me-2"></i>Admin Dashboard</h4>
                <a href="/logout" class="btn btn-light">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="mb-3">Student Management</h5>
                        <div class="d-grid gap-2">
                            <a href="/addstudent" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>Add Student
                            </a>
                            <a href="/viewstudents" class="btn btn-primary">
                                <i class="fas fa-users me-2"></i>View Students
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">Certificate Management</h5>
                        <div class="d-grid gap-2">
                            <a href="/gencertificate" class="btn btn-primary">
                                <i class="fas fa-certificate me-2"></i>Generate Certificate
                            </a>
                            <a href="/remcertificate" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Remove Certificate
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h5 class="mb-3">Recent Students</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof students !== 'undefined' && students && students.length > 0) { %>
                                    <% students.forEach(function(student) { %>
                                        <tr>
                                            <td><%= student.name %></td>
                                            <td><span class="address-text"><%= student.address %></span></td>
                                            <td>
                                                <a href="/admin/students/<%= student._id %>" class="btn btn-primary btn-sm me-2">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <a href="/admin/students/<%= student._id %>/certificate" class="btn btn-success btn-sm">
                                                    <i class="fas fa-certificate me-1"></i>Generate Certificate
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            <i class="fas fa-user-graduate me-2"></i>No students registered yet
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

