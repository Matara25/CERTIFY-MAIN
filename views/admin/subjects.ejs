<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subjects - Certify</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <!-- Top Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-indigo-600">Certify</span>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-700">Welcome, <%= user ? user.name : 'Admin' %></span>
                    <a href="/auth/logout" class="text-red-600 hover:text-red-800">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg h-screen">
            <div class="p-4">
                <nav class="space-y-2">
                    <a href="/admin/dashboard" class="flex items-center space-x-2 p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/admin/subjects" class="flex items-center space-x-2 p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fas fa-book"></i>
                        <span>Subjects</span>
                    </a>
                    <a href="/admin/certificates" class="flex items-center space-x-2 p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fas fa-certificate"></i>
                        <span>Certificates</span>
                    </a>
                    <a href="/admin/users" class="flex items-center space-x-2 p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fas fa-users"></i>
                        <span>Users</span>
                    </a>
                    <a href="/admin/verifications" class="flex items-center space-x-2 p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
                        <i class="fas fa-check-circle"></i>
                        <span>Verifications</span>
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <div class="max-w-6xl mx-auto">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-800">Subjects</h1>
                    <div class="space-x-4">
                        <a href="/admin/dashboard" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fas fa-arrow-left mr-2"></i> Go Back
                        </a>
                        <a href="/admin/subjects/add" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fas fa-plus mr-2"></i> Add Subject
                        </a>
                    </div>
                </div>

                <% if (message) { %>
                    <div class="bg-<%= message.includes('success') ? 'green' : 'red' %>-100 border border-<%= message.includes('success') ? 'green' : 'red' %>-400 text-<%= message.includes('success') ? 'green' : 'red' %>-700 px-4 py-3 rounded mb-4">
                        <%= message %>
                    </div>
                <% } %>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% subjects.forEach(subject => { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden">
                            <div class="p-6">
                                <div class="flex items-center justify-between mb-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                                        <%= subject.code %>
                                    </span>
                                    <span class="text-sm text-gray-500">
                                        <i class="fas fa-clock mr-1"></i>
                                        <%= subject.credits %> credit hours
                                    </span>
                                </div>
                                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= subject.name %></h3>
                                <p class="text-gray-600 mb-4"><%= subject.description %></p>
                                <div class="flex items-center justify-between">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <%= subject.status %>
                                    </span>
                                    <div class="space-x-2">
                                        <a href="/admin/subjects/<%= subject._id %>/edit" class="text-indigo-600 hover:text-indigo-900">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/admin/subjects/<%= subject._id %>/delete" class="text-red-600 hover:text-red-900">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <% if (!subjects || subjects.length === 0) { %>
                    <div class="bg-white shadow-md rounded p-6 text-center">
                        <p class="text-gray-500">No subjects found. Add your first subject to get started.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html> 