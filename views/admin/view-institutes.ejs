<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Institutes</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div class="flex items-center py-4">
                        <span class="font-semibold text-gray-500 text-lg">Institute Management</span>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="/institute/add" class="py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-md">Add Institute</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <% if (error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= error %></span>
            </div>
        <% } %>

        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">Registered Institutes</h2>
            </div>
            
            <% if (institutes && institutes.length > 0) { %>
                <div class="divide-y divide-gray-200">
                    <% institutes.forEach(institute => { %>
                        <div class="p-6">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-medium text-gray-900"><%= institute.name %></h3>
                                    <p class="text-sm text-gray-500">Acronym: <%= institute.acronym %></p>
                                    <p class="text-sm text-gray-500">Website: <a href="<%= institute.website %>" target="_blank" class="text-blue-500 hover:underline"><%= institute.website %></a></p>
                                    
                                    <div class="mt-2">
                                        <h4 class="text-sm font-medium text-gray-700">Courses:</h4>
                                        <div class="mt-1 flex flex-wrap gap-2">
                                            <% institute.courses.forEach(course => { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    <%= course %>
                                                </span>
                                            <% }); %>
                                        </div>
                                    </div>
                                    
                                    <p class="text-xs text-gray-500 mt-2">Added on: <%= new Date(institute.createdAt).toLocaleDateString() %></p>
                                </div>
                                
                                <form action="/institute/remove/<%= institute._id %>" method="POST" class="ml-4">
                                    <button type="submit" class="text-red-600 hover:text-red-800">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="p-6 text-center text-gray-500">
                    No institutes registered yet.
                </div>
            <% } %>
        </div>
    </div>
</body>
</html> 