    <div class="container" style="margin-top: 5%">
      <!-- End Header -->
      <div class="main-body">
        <div class="row gutters-sm" style="justify-content: center">
          <div class="col-md-5 mb-3">
            <div class="card">
              <div class="card-body">
                <div
                  class="d-flex flex-column align-items-center text-center"
                  style="margin: 4% auto"
                >
                  <img
                    src="https://bootdey.com/img/Content/avatar/avatar7.png"
                    alt="Admin"
                    class="rounded-circle"
                    width="150"
                  />
                  <div class="mt-3">
                    <h4><%=username%></h4>
                    <p class="text-secondary mb-1">Blockchain Address</p>
                    <p class="text-secondary mb-1"><%=address%></p>
                    <p class="text-secondary mb-1">Certificates: <%=certificates.length%></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">My Certificates</h5>
                <div class="certificates-list">
                  <% if (certificates && certificates.length > 0) { %>
                    <% certificates.forEach(function(certificate) { %>
                      <div class="row mb-3">
                        <div class="col-6">
                          <%=certificate.issuedBy.blockchainAddress%>
                          <br />
                          <sub><%=certificate.issuedBy.name%></sub>
                        </div>
                        <div class="col-3" style="margin: auto; text-align: center">
                          <%=certificate.title%>
                        </div>
                        <div class="col-3" style="margin: auto; text-align: right;">
                          <a href="/student/certificate/<%=certificate._id%>" class="btn btn-primary btn-sm">View</a>
                        </div>
                      </div>
                      <hr />
                    <% }); %>
                  <% } else { %>
                    <div class="text-center text-muted">
                      <p>No certificates found</p>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      allblog = document.getElementsByClassName("blog");
      for (i = 0; i < allblog.length; i++) allblog[i].style.display = "none";
      // console.log(curr);
      document.getElementById("draft").style.display = "block";
      // $(evt.target).addClass("active");
      function updatedisplay(evt, curr) {
        allblog = document.getElementsByClassName("blog");
        for (i = 0; i < allblog.length; i++) allblog[i].style.display = "none";
        // console.log(curr);
        document.getElementById(curr).style.display = "block";
        $(evt.target).addClass("active");
      }
    </script>
    <script type="text/javascript"></script>
  </body>
